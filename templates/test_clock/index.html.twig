{% extends 'base.html.twig' %}

{% block title %} TestClock index {% endblock %}

{% block body %}
    <h1> TestClock index </h1>

    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th> Id </th>
                <th> StripeTestClockId </th>
                <th> Name </th>
                <th> FrozenTime </th>
                <th> Actions </th>
            </tr>
        </thead>
        <tbody>
        {% for testClock in testClocks %}
            <tr>
                <td>{{ testClock.id }}</td>
                <td>{{ testClock.stripeTestClockId }}</td>
                <td>{{ testClock.name }}</td>
                <td>{{ testClock.frozenTime ? (testClock.frozenTime|date('Y-m-d H:i:s') ~ ' UTC') : '' }}</td>
                <td>
                    <a href="{{ path('app_test_clock_show', {'id': testClock.id}) }}" class="btn btn-sm btn-primary"> Show </a>
                    <a href="{{ path('app_test_clock_advance', {'id': testClock.id}) }}" class="btn btn-sm btn-primary"> Advance </a>
                    {{ include('test_clock/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5"> No test clock yet</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_test_clock_new') }}"class="btn btn-primary"> Create new </a>
{% endblock %}
