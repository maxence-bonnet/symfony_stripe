{% extends 'base.html.twig' %}

{% block title %} TestClock {{ testClock.name }} {% endblock %}

{% block body %}
    <h1> TestClock {{ testClock.name }} </h1>

    <table class="table">
        <tbody>
            <tr>
                <th> Id </th>
                <td> {{ testClock.id }} </td>
            </tr>
            <tr>
                <th> StripeTestClockId </th>
                <td> {{ testClock.stripeTestClockId }} </td>
            </tr>
            <tr>
                <th> Name </th>
                <td> {{ testClock.name }} </td>
            </tr>
            <tr>
                <th> FrozenTime </th>
                <td> {{ testClock.frozenTime ? (testClock.frozenTime|date('Y-m-d H:i:s') ~ ' UTC') : '' }} </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_test_clock_index') }}" class="btn btn-sm btn-primary"> Back </a>

    <a href="{{ path('app_test_clock_advance', {'id': testClock.id}) }}" class="btn btn-sm btn-primary"> Advance </a>

    {{ include('test_clock/_delete_form.html.twig') }}
{% endblock %}
