<form method="post" action="{{ path('app_my_subscription_cancel', {id: subscription.id}) }}" onsubmit="return confirm('Are you sure you want to cancel this subscription?');" class="d-inline-block">
    <input type="hidden" name="_token" value="{{ csrf_token('cancel' ~ subscription.id) }}">
    <button class="btn btn-sm btn-warning"> Cancel </button>
</form>
